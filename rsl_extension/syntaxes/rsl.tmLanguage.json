{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "RSL",
	"fileTypes": [
		"rsl"
	],
	"foldingStartMarker": "\\{",
	"foldingStopMarker": "\\}",
	"patterns": [
		{
			"include": "#global"
		}
	],
	"repository": {
		"preprocessor": {
			"name": "meta.preprocessor.rsl",
			"match": "#(include|define)"
		},
		"keywords": {
			"patterns": [
				{
					"name": "keyword.operator.rsl",
					"match": "(<|>|=|&&|\\|\\||\\+|\\-|\/|\\*|%)"
				},
				{
					"name": "keyword.control.rsl",
					"match": "\\b(if|for|break|continue|while|discard|do|return)\\b"
				}
			]
		},
		"comments": {
			"patterns": [
				{
					"name": "comment.line.block.rsl",
					"begin": "/\\*",
					"end": "\\*/"
				},
				{
					"name": "comment.line.double-slash.rsl",
					"begin": "//",
					"end": "$"
				}
			]
		},
		"literals": {
			"patterns": [
				{
					"name": "constant.numeric.float.rsl",
					"match": "\\b[0-9]+\\.[0-9]+\\b"
				},
				{
					"name": "constant.numeric.float.rsl",
					"match": "\\b[0-9]+\b"
				},
				{
					"name": "string.quoted.double.rsl",
					"begin": "\"",
					"end": "\"",
					"patterns": [
						{
							"name": "constant.character.escape.rsl",
							"match": "\\\\."
						}
					]
				}
			]
		},
		"types": {
			"patterns": [
				{
					"name": "storage.modifier.rsl",
					"match": "\\b(uniform|readonly|static|const)\\b"
				}
			]
		},
		"_declaration": {
			"patterns": [
				{
					"match": "\\b(float4x4|float3x3|float|float[2-4]|int|int[2-4]|bool|texture|cubemap|image|var|void|push|struct)\\b",
					"name": "storage.type.rsl"
				},
				{
					"match": "([a-zA-Z][a-zA-Z0-9]+)",
					"name": "entity.name.class"
				}
			]
		},
		"declaration": {
			"patterns": [
				{
					"match": "([\\w][\\w\\d]+)([\\*]+)?(\\s+)([\\w][\\w\\d]+)(\\[[\\w\\d]{0,}+\\])?(\\s+)?:(\\s+)?([\\w\\d_]+)(\\s+)?;",
					"captures": {
						"1": {
							"patterns": [
								{
									"include": "#_declaration"
								}
							]
						},
						"4": {
							"name": "variable.parameter.rsl"
						},
						"8": {
							"name": "constant.language.rsl"
						}
					}
				},
				{
					"match": "([\\w][\\w\\d]+)([\\*]+)?(\\s+)([\\w][\\w\\d]+)(\\[[\\w\\d]{0,}+\\])?(\\s+)?;",
					"captures": {
						"1": {
							"patterns": [
								{
									"include": "#_declaration"
								}
							]
						},
						"4": {
							"name": "variable.parameter.rsl"
						}
					}
				},
				{
					"match": "([\\w][\\w\\d]+)([\\*]+)?(\\s+)([\\w][\\w\\d]+)(\\[[\\w\\d]{0,}+\\])?(\\s+)?=",
					"captures": {
						"1": {
							"patterns": [
								{
									"include": "#_declaration"
								}
							]
						},
						"4": {
							"name": "variable.parameter.rsl"
						}
					}
				}
			]
		},
		"parameter": {
			"patterns": [
				{
					"match": "(in|out)?(\\s+)?([\\w][\\w\\d]+)([\\*]+)?(\\s+)([\\w][\\w\\d]+)(\\[[\\w\\d]{0,}+\\])?(\\s+)?:(\\s+)?([\\w\\d_]+)",
					"captures": {
						"1": {
							"name": "storage.modifier.rsl"
						},
						"3": {
							"patterns": [
								{
									"include": "#_declaration"
								}
							]
						},
						"6": {
							"name": "variable.parameter.rsl"
						},
						"10": {
							"name": "constant.language.rsl"
						}
					}
				},
				{
					"match": "(in|out)?(\\s+)?([\\w][\\w\\d]+)([\\*]+)?(\\s+)([\\w][\\w\\d]+)(\\[[\\w\\d]{0,}+\\])?",
					"captures": {
						"1": {
							"name": "storage.modifier.rsl"
						},
						"3": {
							"patterns": [
								{
									"include": "#_declaration"
								}
							]
						},
						"6": {
							"name": "variable.parameter.rsl"
						}
					}
				}
			]
		},
		"function_call": {
			"match": "([\\w][\\w\\d]+)\\(",
			"captures": {
				"1": {
					"name": "entity.name.function"
				}
			}
		},
		"function_scope": {
			"patterns": [
				{
					"include": "#comments"
				},
				{
					"include": "#literals"
				},
				{
					"include": "#preprocessor"
				},
				{
					"include": "#keywords"
				},
				{
					"include": "#declaration"
				},
				{
					"include": "#function_call"
				}
			]
		},
		"function": {
			"patterns": [
				{
					"begin": "(fn)(\\s+)?([\\w][\\w\\d]+)\\(([\\w\\d\\s,\\*_:]+)?\\)(\\s+)?:(\\s+)?([\\w][\\w\\d]+)(\\s+)?->",
					"end": ";",
					"beginCaptures": {
						"1": {
							"name": "storage.type.rsl"
						},
						"3": {
							"name": "entity.name.function.rsl"
						},
						"4": {
							"patterns": [
								{
									"include": "#parameter"
								}
							]
						},
						"7": {
							"patterns": [
								{
									"include": "#_declaration"
								}
							]
						}
					},
					"patterns": [
						{
							"include": "#function_scope"
						}
					]
				},
				{
					"begin": "(fn)(\\s+)?([\\w][\\w\\d]+)\\(([\\w\\d\\s,\\*_:]+)?\\)(\\s+)?:(\\s+)?([\\w][\\w\\d]+)\\s*\\{",
					"end": "\\}",
					"beginCaptures": {
						"1": {
							"name": "storage.type.rsl"
						},
						"3": {
							"name": "entity.name.function.rsl"
						},
						"4": {
							"patterns": [
								{
									"include": "#parameter"
								}
							]
						},
						"7": {
							"patterns": [
								{
									"include": "#_declaration"
								}
							]
						}
					},
					"patterns": [
						{
							"include": "#function_scope"
						}
					]
				}
			]
		},
		"struct": {
			"begin": "(struct)(\\s+)?([a-zA-Z][a-zA-Z0-9]+)(\\s+)?\\{",
			"end": "\\}",
			"beginCaptures": {
				"1": {
					"name": "storage.type.rsl"
				},
				"3": {
					"name": "entity.name.class"
				}
			},
			"patterns": [
				{
					"include": "#function"
				},
				{
					"include": "#declaration"
				}
			]
		},
		"push": {
			"begin": "(push)(\\s+)?\\{",
			"end": "\\}",
			"beginCaptures": {
				"1": {
					"name": "storage.type.rsl"
				},
				"3": {
					"name": "entity.name.class"
				}
			},
			"patterns": [
				{
					"include": "#function"
				},
				{
					"include": "#declaration"
				}
			]
		},
		"named_scope": {
			"begin": "(scope)(\\s+)?([\\w\\d]+)(\\s+)?\\{",
			"end": "\\}",
			"beginCaptures": {
				"1": {
					"name": "storage.type.rsl"
				},
				"3": {
					"name": "entity.name.class"
				}
			},
			"patterns": [
				{
					"include": "#preprocessor"
				},
				{
					"include": "#keywords"
				},
				{
					"include": "#declaration"
				},
				{
					"include": "#function"
				},
				{
					"include": "#struct"
				},
				{
					"include": "#push"
				}
			]
		},
		"global": {
			"patterns": [
				{
					"include": "#comments"
				},
				{
					"include": "#literals"
				},
				{
					"include": "#preprocessor"
				},
				{
					"include": "#keywords"
				},
				{
					"include": "#declaration"
				},
				{
					"include": "#function"
				},
				{
					"include": "#struct"
				},
				{
					"include": "#push"
				},
				{
					"include": "#named_scope"
				}
			]
		}
	},
	"scopeName": "source.rsl"
}